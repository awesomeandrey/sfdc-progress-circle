<aura:component implements="force:appHostable" access="global">
    <div class="slds-align_absolute-center" width="30rem">
        <div class="slds-box slds-theme_default slds-m-top_x-large">
            <div class="slds-text-align_center">
                <span class="slds-text-heading_medium">Progress Circle Demo</span>
            </div>
            <lightning:layout pullToBoundary="medium">
                <lightning:layoutItem flexibility="auto" padding="around-large" class="slds-align_absolute-center">
                    <c:ProgressCircle progress="10" size="small" tooltip="This is small version."/>
                </lightning:layoutItem>
                <lightning:layoutItem flexibility="auto" padding="around-large" class="slds-align_absolute-center">
                    <c:ProgressCircle progress="35" size="medium" tooltip="This is medium version." variant="success"/>
                </lightning:layoutItem>
                <lightning:layoutItem flexibility="auto" padding="around-large" class="slds-align_absolute-center">
                    <c:ProgressCircle progress="80" size="large" tooltip="This is large version."/>
                </lightning:layoutItem>
            </lightning:layout>
         </div>
    </div>
</aura:component>	